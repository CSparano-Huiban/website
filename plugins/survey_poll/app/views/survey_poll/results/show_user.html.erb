<% provide(:title , "#{@survey.title} Responses")%>

<div class="row">
	<div class="span12">
		<h2><%= @survey.title%> Responses</h2>
		<table class="table table-striped table-hover table-condensed">
		  <thead>
		  <tr>
			<th>Class</th>
			<% @survey.questions.order(position: :asc).each do | question |%>
			 <th><%= question.question%></th>
			<% end %>
		   </tr>
		  </thead>
		  <tbody>
		    <tr>
		     <td><%= @brother.mit_info.year%></td>
		     <% @responses.each do | resp |%>
		      <td><%= resp%></td>
		     <% end %>
		    </tr>
		   </tbody>
		</table>
	</div>
</div>
